{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors?_method=PUT">
    <section 
        class="avatar"
        style="background-image: url({{instructor.avatar_url}});"    
    >
    </section>
    <section class="details">

        <h3>Editar instrutor</h3>

        {% include 'instructors/fields.njk' %}

        <input 
            type="hidden"
            name="id"
            value={{instructor.id}}>

    </section>
</form>
{% endblock content %}